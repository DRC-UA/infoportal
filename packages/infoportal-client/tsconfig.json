{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES6",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "kobo-sdk/*": [
        "../kobo-sdk/src/*"
      ],
      "infoportal-common/*": [
        "../infoportal-common/src/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "references": [
    {
      "path": "../infoportal-common"
    },
    {
      "path": "../kobo-sdk"
    }
  ],
  "exclude": [
    "node_modules",
    "src/features/ProtectionSnapshot/*"
  ]
}
