{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./lib",
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./src/typings"
    ],
    "paths": {
      "@/*": ["src/*"],
      "infoportal-common/*": [
        "../infoportal-common/src/*"
      ],
      "*": [
        "./*"
      ]
    }
  },
  "references": [
    {
      "path": "../infoportal-common"
    }
  ],
  "ts-node": {
    "files": true
  },
  "include": [
    "src"
  ]
}
