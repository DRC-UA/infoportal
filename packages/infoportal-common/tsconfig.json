{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "ES2021",
      "dom"
    ],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "checkJs": false,
    "rootDir": "./src",
    "composite": true,
    "resolveJsonModule": true,
    "paths": {
      "kobo-sdk/*": [
        "../kobo-sdk/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../kobo-sdk"
    }
  ],
  "include": [
    "src/**/*",
    "ressources/**/*"
  ]
}